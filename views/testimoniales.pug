extends ./templates/doctype.pug

block allContent
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}
        blockquote.text-center Lee sobre nuestro clientes y sus experiencias
        include ./templates/block-testimoniales.pug
        if error
            p.text-center.alert.alert-danger.rounded.shadow= error
        .row
            h2.d-block.w-100.text-center Agrega un testimonial
            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text",placeholder="Tu nombre",name="nombre", class="form-control", value= nombre)
                        .form-group
                            label(for="correo") correo
                            input#correo(type="email",placeholder="Tu correo",name="correo", class="form-control", value= correo)
                        .form-group
                            label(for="mensaje") mensaje
                            textarea#mensaje(type="email",placeholder="Tu mensaje",name="mensaje", class="form-control", rows="3")= mensaje
                        
                        input.btn.btn-success.btn-block.fs-2(type="submit")